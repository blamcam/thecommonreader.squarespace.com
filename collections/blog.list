{.repeated section items}

{.section item}

  <article id="article-{id}" class="BlogItem-article {@|item-classes}{.passthrough?} BlogItem-article--passthrough{.end}{.if starred} BlogItem-article--featured{.or} BlogItem-article--not-featured{.end}{.main-image?} BlogItem-article--has-main-image{.or} BlogItem-article--no-main-image{.end}{.if categories.0} has-categories{.end}{.if tags.0} has-tags{.end}{.if location.addressTitle || location.addressLine1 || location.addressLine2 || location.addressCountry} has-location{.end}{.comments?} has-comments{.end}" data-item-id="{id}">


    <h1 class="BlogItem-title" data-content-field="title" itemprop="headline">{title}</h1>
    <div class="Blog-meta BlogItem-meta">{@|apply blog-meta.block}</div>
    {.excerpt?}
      <div class="Blog-excerpt" data-content-field="excerpt">{excerpt}</div>
    {.end}
    {.main-image?}<figure class="Blog-header-image content-fill" sqs-controller="Template.Controllers.SimpleImageLoad"><img {@|image-meta} data-load="false" /></figure>
    {.end}
    <div class="col sqs-col-12 span-12" data-layout-label="Post Body" data-type="item" data-updated-on="{updatedOn}" id="item-{id}">{body}</div>
    <div class="BlogItem-share">
      <div class="Share sqs-share-buttons" data-item-identifier="{id}" data-item-path="{.passthrough?}{sourceUrl}{.or}{fullUrl}{.end}">
        <div class="Share-buttons" id="yui_{id}">{@|apply sqs-share-buttons}</div>
      </div>
    </div>
    {.if postItemInjectCode}{postItemInjectCode}{.end}
    <section id="comments-{id}" class="BlogItem-comments">
        {@|comments}
    </section>
  </article>

{.end}
{.section pagination}
  <nav class="BlogItem-pagination clear" sqs-controller="Template.Controllers.BlogItemPaginationArrows">

    {.section prevItem}
      <a href="{.if passthrough}{sourceUrl}{.or}{fullUrl}{.end}" class="BlogItem-pagination-link BlogItem-pagination-link--prev">
        <svg class="BlogItem-pagination-link-icon" viewBox="0 0 23 48">
          <g class="svg-icon">
            <polyline fill="none" stroke-miterlimit="10" points="21.5,1.3 2.6,23.4 21.5,45.7 "></polyline>
          </g>
        </svg>
        <!---->
        <div class="BlogItem-pagination-link-content">
          <div class="BlogItem-pagination-link-label">Previous</div>
          <h4 class="BlogItem-pagination-link-title">
            <span class="pagination-title-wrapper">
              {title}
            </span>
          </h4>
          <div class="BlogItem-pagination-link-meta">{@|apply blog-meta-pagination.block}</div>
        </div>
      </a>
    {.end}

    {.section nextItem}
      <a href="{.if passthrough}{sourceUrl}{.or}{fullUrl}{.end}" class="BlogItem-pagination-link BlogItem-pagination-link--next">
        <div class="BlogItem-pagination-link-content">
          <div class="BlogItem-pagination-link-label">Next</div>
          <h4 class="BlogItem-pagination-link-title">
            <span class="pagination-title-wrapper">
              {title}
            </span>
          </h4>
          <div class="BlogItem-pagination-link-meta">{@|apply blog-meta-pagination.block}</div>
        </div>
        <!---->
        <svg class="BlogItem-pagination-link-icon" viewBox="0 0 23 48">
          <g class="svg-icon">
            <polyline fill="none" stroke-miterlimit="10" points="1.5,45.7 20.4,23.5 1.5,1.3 "></polyline>
          </g>
        </svg>
      </a>
    {.end}

  </nav>
{.end}

{.end}
